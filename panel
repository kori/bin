#!/bin/sh
# panel script

. $XDG_CONFIG_HOME/wm.conf

# set colors
ffg='%{F#ff839496}'
bfg='%{B#ff839496}'
fhl='%{F#ff58698c}'
bhl='%{B#ff58698c}'
blw='%{F#ff353540}'
fbg='%{F#ff09090d}'
bbg='%{B#ff09090d}'

pb() {
	progressbar | sed -e 0,//s//${blw}/ -e 0,//s//${fhl}/
}

# group indicators
gi() {
	wmstatus | sed -e s/0/${blw}/g -e s/1/${fhl}/g
}

# invoke panel
while :; do
	# set bg/fg
	bar="$ffg$bbg"

	# left section
	bar="$bar %{l}"
	# music
	bar="$bar ${fhl}"
	bar="$bar ${ffg}$(mpc current)${fbg}"

	# center section
	bar="$bar %{c}"
	# window groups
	bar="$bar $(gi)"

	# right section
	bar="$bar %{r}"
	# cpu
	bar="$bar ${fhl}"
	bar="$bar $(cpu | pb)"
	# memory
	bar="$bar ${fhl}"
	bar="$bar $(memory | pb)"
	# volume
	bar="$bar ${fhl}"
	bar="$bar $(volume | pb)"
	# clock
	bar="$bar ${fhl}${bbg}"
	bar="$bar ${ffg}$(date '+%T')"

	echo "$bar "
	sleep 0.5;
done | lemonbar -g $(wattr w $(lsw -r))x${PANELHEIGHT}x0x0 \
                -df 'Metis' -f "kochigothic:size=8"
