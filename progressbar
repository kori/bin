#!/bin/sh

case `cat` in
	[1-9][0-9][0-9])    echo '1111111111' ;;
	9[0-9])             echo '1111111110' ;;
	8[0-9])             echo '1111111100' ;;
	7[0-9])             echo '1111111000' ;;
	6[0-9])             echo '1111110000' ;;
	5[0-9])             echo '1111100000' ;;
	4[0-9])             echo '1111000000' ;;
	3[0-9])             echo '1110000000' ;;
	2[0-9])             echo '1100000000' ;;
	1[0-9])             echo '1000000000' ;;
	[0-9][0-9] | [0-9]) echo '0000000000' ;;
	*)                  echo 'not a percentage' ;;
esac
